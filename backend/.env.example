# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./stackbrowseragent.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/stackbrowseragent

# LLM API Keys (Optional - for cloud LLM providers)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Vector Database (RAG)
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=text-embedding-ada-002

# Pinecone (Optional - for production RAG)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=stackbrowseragent

# Agent Configuration
MAX_CONCURRENT_AGENTS=20
AGENT_TIMEOUT_SECONDS=300
TASK_RETRY_LIMIT=3

# CORS Origins (comma-separated)
# Add your Chrome extension ID here
# CORS_ORIGINS=chrome-extension://your-extension-id,http://localhost:3000

# Browser Automation
PLAYWRIGHT_BROWSER_TYPE=chromium
PLAYWRIGHT_HEADLESS=true

# Monitoring
PROMETHEUS_ENABLED=true
LOG_FORMAT=json
