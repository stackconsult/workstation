#!/bin/bash
# scripts/07-test-rebranded-code.sh

set -e

source rebrand-config.env
cd "$PROJECT_DIR"

echo "ğŸ§ª Phase 5: Testing rebranded code..."

# Install dependencies if needed
if [ -f "package.json" ] && [ ! -d "node_modules" ]; then
    echo "Installing dependencies..."
    npm install
fi

# Run tests
TEST_FAILED=0

if [ -f "package.json" ]; then
    # Unit tests
    if jq -e '.scripts.test' package.json > /dev/null; then
        echo "Running unit tests..."
        npm test > ../security-reports/test-results.log 2>&1 || TEST_FAILED=1
        
        if [ "$TEST_FAILED" -eq 1 ]; then
            echo "âŒ Unit tests failed"
            cat ../security-reports/test-results.log
            exit 1
        fi
        echo "âœ… Unit tests passed"
    fi
    
    # Build verification
    if jq -e '.scripts.build' package.json > /dev/null; then
        echo "Running build..."
        npm run build > ../security-reports/build-results.log 2>&1 || {
            echo "âŒ Build failed"
            cat ../security-reports/build-results.log
            exit 1
        }
        echo "âœ… Build successful"
    fi
    
    # Lint check
    if jq -e '.scripts.lint' package.json > /dev/null; then
        echo "Running linter..."
        npm run lint > ../security-reports/lint-results.log 2>&1 || {
            echo "âš ï¸  Linting issues detected"
            cat ../security-reports/lint-results.log
        }
    fi
fi

cd ..

echo "âœ… Testing complete - all tests passed"
```

### Phase 6: License Attribution and Documentation

#### Step 8: Proper License Attribution

Update license safely:
```
#!/bin/bash
# scripts/08-update-license.sh

set -e

source rebrand-config.env
cd "$PROJECT_DIR"

echo "ğŸ“„ Phase 6: Updating license with proper attribution..."

if [ -f "LICENSE" ]; then
    # Backup original
    cp LICENSE LICENSE.original
    
    # Create new license with attribution
    cat > LICENSE << EOL
# ${NEW_PROJECT_NAME_CAMELCASE} License

Copyright (c) $(date +%Y) ${NEW_AUTHOR_NAME:-stackconsult}

## Derivative Work Notice

This project is a derivative work of ${OLD_PROJECT_NAME_CAMELCASE}
(https://github.com/${SOURCE_REPO_OWNER}/${SOURCE_REPO_NAME}),
used and modified under the terms of the following license:

---

## Original Project License

EOL
    
    # Append original license content (sanitized)
    grep -v "^<script" LICENSE.original | grep -v "javascript:" | grep -v "onerror=" >> LICENSE
    
    rm LICENSE.original
    
    echo "âœ… License updated with proper attribution"
else
    echo "âš ï¸  No LICENSE file found. Creating default license..."
    cat > LICENSE << EOL
# ${NEW_PROJECT_NAME_CAMELCASE} License

Copyright (c) $(date +%Y) ${NEW_AUTHOR_NAME:-stackconsult}

This project is a derivative work. Please see source repository for original licensing terms.
EOL
fi

cd ..
```

