if [ ${#MISSING_DEPS[@]} -gt 0 ]; then
    echo "âŒ Missing required dependencies:"
    printf '  - %s\n' "${MISSING_DEPS[@]}"
    exit 1
fi

echo "âœ… Prerequisites satisfied"
