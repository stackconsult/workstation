{
  "id": "ci-cd-pipeline-automation",
  "name": "CI/CD Pipeline Automation",
  "description": "Automate continuous integration and deployment pipelines. Monitors repository changes, triggers builds, runs tests, performs deployments, and sends notifications. Supports multiple environments and rollback capabilities.",
  "category": "devops",
  "icon": "ðŸš€",
  "tags": ["devops", "ci-cd", "deployment", "automation", "pipeline"],
  "complexity": "advanced",
  "estimatedDuration": "30-60 minutes",
  "createdAt": "2025-11-24T00:00:00Z",
  "updatedAt": "2025-11-24T00:00:00Z",
  "nodes": [
    {"id": "node-1", "type": "start", "label": "Start", "x": 100, "y": 100},
    {"id": "node-2", "type": "git_clone", "label": "Clone Repository", "x": 100, "y": 200, "params": {"repo": "{{env.GIT_REPO}}", "branch": "main"}},
    {"id": "node-3", "type": "install_dependencies", "label": "Install Dependencies", "x": 100, "y": 300, "params": {"command": "npm install", "cacheEnabled": true}},
    {"id": "node-4", "type": "run_lint", "label": "Run Linters", "x": 100, "y": 400, "params": {"command": "npm run lint", "failOnError": true}},
    {"id": "node-5", "type": "run_tests", "label": "Run Unit Tests", "x": 100, "y": 500, "params": {"command": "npm test", "coverage": true, "minCoverage": 80}},
    {"id": "node-6", "type": "build", "label": "Build Application", "x": 100, "y": 600, "params": {"command": "npm run build", "outputDir": "dist"}},
    {"id": "node-7", "type": "run_e2e_tests", "label": "Run E2E Tests", "x": 100, "y": 700, "params": {"command": "npm run test:e2e", "browser": "chromium"}},
    {"id": "node-8", "type": "docker_build", "label": "Build Docker Image", "x": 100, "y": 800, "params": {"dockerfile": "Dockerfile", "tag": "app:{{version}}"}},
    {"id": "node-9", "type": "docker_push", "label": "Push to Registry", "x": 100, "y": 900, "params": {"registry": "{{env.DOCKER_REGISTRY}}", "tag": "app:{{version}}"}},
    {"id": "node-10", "type": "deploy", "label": "Deploy to Staging", "x": 100, "y": 1000, "params": {"environment": "staging", "healthCheck": true}},
    {"id": "node-11", "type": "smoke_tests", "label": "Run Smoke Tests", "x": 100, "y": 1100, "params": {"url": "{{env.STAGING_URL}}", "tests": ["health", "critical-paths"]}},
    {"id": "node-12", "type": "condition", "label": "Tests Passed?", "x": 100, "y": 1200, "params": {"condition": "smoke_tests.status === 'passed'"}},
    {"id": "node-13", "type": "deploy", "label": "Deploy to Production", "x": 200, "y": 1300, "params": {"environment": "production", "healthCheck": true, "strategy": "blue-green"}},
    {"id": "node-14", "type": "rollback", "label": "Rollback", "x": 50, "y": 1300, "params": {"environment": "staging", "toPreviousVersion": true}},
    {"id": "node-15", "type": "notify", "label": "Send Success Notification", "x": 200, "y": 1400, "params": {"channels": ["slack", "email"], "message": "Deployment successful"}},
    {"id": "node-16", "type": "notify", "label": "Send Failure Notification", "x": 50, "y": 1400, "params": {"channels": ["slack", "email"], "message": "Deployment failed", "severity": "error"}},
    {"id": "node-17", "type": "end", "label": "End", "x": 100, "y": 1500}
  ],
