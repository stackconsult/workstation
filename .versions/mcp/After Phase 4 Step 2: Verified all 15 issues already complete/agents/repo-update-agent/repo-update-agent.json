{
  "name": "Repo Update Agent",
  "version": "1.0.0",
  "description": "Automated documentation update tracking and synchronization agent",
  "schedule": {
    "time": "21:00",
    "timezone": "UTC",
    "frequency": "daily",
    "cron": "0 21 * * *",
    "description": "Runs at 9:00 PM UTC daily"
  },
  "targets": [
    {
      "file": "README.md",
      "type": "main-page",
      "priority": "high",
      "sections": [
        "Code Quality Metrics",
        "Implementation Status",
        "Documentation"
      ]
    },
    {
      "file": "REPOSITORY_STATS.md",
      "type": "statistics",
      "priority": "high",
      "sections": [
        "File & Code Statistics",
        "Lines of Code Analysis",
        "Agent Ecosystem",
        "Chrome Extension"
      ]
    },
    {
      "file": "STATS_OVERVIEW.md",
      "type": "dashboard",
      "priority": "high",
      "sections": [
        "At a Glance",
        "Key Metrics Dashboard",
        "Chrome Extension Highlights"
      ]
    },
    {
      "file": "BUILD_STATISTICS_AND_IMPACT_ANALYSIS.md",
      "type": "build-stats",
      "priority": "medium",
      "sections": [
        "Code Base Metrics",
        "Test & Quality Metrics"
      ]
    },
    {
      "file": "ACTIVITY_TIMELINE.md",
      "type": "timeline",
      "priority": "medium",
      "sections": [
        "Development Timeline",
        "Recent Milestones"
      ]
    },
    {
      "file": "ROADMAP_PROGRESS.md",
      "type": "roadmap",
      "priority": "medium",
      "sections": [
        "Phase Completion Overview",
        "Feature Completion Matrix"
      ]
    },
    {
      "file": "REPO_UPDATE_TASKS.md",
      "type": "task-list",
      "priority": "critical",
      "sections": [
        "Completed Items",
        "Pending Updates",
        "Current Repository Statistics"
      ]
    }
  ],
  "statistics": {
    "tracked_metrics": [
      {
        "name": "total_files",
        "command": "git ls-files | wc -l",
        "description": "Total tracked files in repository"
      },
      {
        "name": "typescript_files",
        "command": "find src -name '*.ts' | wc -l",
        "description": "TypeScript source files"
      },
      {
        "name": "test_files",
        "command": "find tests -name '*.test.ts' -o -name '*.spec.ts' | wc -l",
        "description": "Test suite files"
      },
      {
        "name": "documentation_files",
        "command": "find . -name '*.md' -not -path './node_modules/*' | wc -l",
        "description": "Markdown documentation files"
      },
      {
        "name": "chrome_extension_js",
        "command": "find chrome-extension -name '*.js' | wc -l",
        "description": "Chrome extension JavaScript files"
      },
      {
        "name": "production_loc",
        "command": "find src -name '*.ts' -o -name '*.js' | xargs wc -l | tail -1 | awk '{print $1}'",
        "description": "Lines of production code"
      },
      {
        "name": "chrome_extension_loc",
        "command": "find chrome-extension -name '*.js' | xargs cat | wc -l",
        "description": "Lines of Chrome extension code"
      },
      {
        "name": "test_loc",
        "command": "find tests -name '*.ts' | xargs wc -l | tail -1 | awk '{print $1}'",
        "description": "Lines of test code"
      },
      {
        "name": "agents",
        "command": "ls -d agents/*/ | wc -l",
        "description": "Number of agent directories"
      },
      {
        "name": "mcp_containers",
        "command": "ls -d mcp-containers/*/ | wc -l",
        "description": "Number of MCP containers"
      },
      {
        "name": "workflows",
        "command": "ls -1 .github/workflows/*.yml .github/workflows/*.yaml | wc -l",
        "description": "Number of GitHub Actions workflows"
      }
    ]
  },
  "rollback": {
    "enabled": true,
    "retention_days": 30,
    "directory": "rollbacks/",
    "backup_format": "{date}/{file}.bak",
    "index_file": "rollbacks/rollback-index.json",
    "auto_cleanup": true
  },
  "tracking": {
    "task_list_file": "REPO_UPDATE_TASKS.md",
    "link_commits": true,
    "link_prs": true,
    "link_issues": true,
    "commit_lookback_hours": 24,
    "generate_summary": true,
    "summary_format": "repo-update-summary-{date}.md"
  },
  "notifications": {
    "enabled": false,
    "channels": [],
    "on_error_only": false,
    "include_summary": true
  },
  "automation": {
    "auto_commit": true,
    "commit_message_template": "ðŸ“Š Daily documentation update - {datetime}\n\n{summary}",
    "branch": "main",
    "create_pr": false,
    "require_approval": false
  },
  "features": {
    "detect_changes": true,
    "calculate_statistics": true,
    "update_documentation": true,
    "create_rollbacks": true,
    "track_tasks": true,
    "generate_reports": true,
    "cleanup_old_backups": true
  },
  "logging": {
    "level": "info",
    "directory": "logs/repo-update-agent/",
    "file_format": "{date}.log",
    "retain_days": 90,
    "console_output": true
  },
  "performance": {
    "parallel_updates": false,
    "max_file_size_mb": 10,
    "timeout_seconds": 300
  }
}
